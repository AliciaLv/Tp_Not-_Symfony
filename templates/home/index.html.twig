{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h5>Less expensive products :</h5>
            <table>
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                </tr>
                {% for product in lessExpensiveProduct %}
                    <tr>
                        <td>{{product.name}}</td>
                        <td>{{product.price}}â‚¬</td>
                    <tr>
                {% endfor %}
            </table>
        </div>

        <div class="col-6">
            <h5>most recent products :</h5>
            <table>
                <tr>
                    <th>Nom</th>
                    <th>Created at</th>
                </tr>
                {% for product in mostRecentProduct %}
                    <tr>
                        <td>{{product.name}}</td>
                        <td>{{product.createdAt|date('d/m/Y')}}</td>
                    <tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
