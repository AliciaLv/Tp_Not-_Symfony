{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1 class="mb-5">HOME</h1>
    <div class="row">
        <div class="col-6">
            <h5 class="mb-3">Less expensive products :</h5>
            <table class="table">
                <thead>
                    <tr scope="row">
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in lessExpensiveProduct %}
                        <tr scope="row">
                            <td>{{product.name}}</td>
                            <td>{{product.price}}â‚¬</td>
                        <tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-6">
            <h5 class="mb-3">most recent products :</h5>
            <table class="table">
                <tr  scope="row">
                    <th>Name</th>
                    <th>Created at</th>
                </tr>
                {% for product in mostRecentProduct %}
                    <tr  scope="row">
                        <td>{{product.name}}</td>
                        <td>{{product.createdAt|date('d/m/Y')}}</td>
                    <tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
