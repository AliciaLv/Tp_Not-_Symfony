{% extends 'base.html.twig' %}

{% block title %}Product !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="produit">
        <p>Number : {{command.id}}</p>
        </p>Email Buyer : {{command.email}}<br><br>
        <table>
            <tr>
                <th>Product name</th>
                <th>Product Price </th>
                <th>Détails</th>
            </tr>

            {% for product in products %}
                <tr>
                    <td>{{product.name}}</td>
                    <td>{{product.price}}</td>
                    <td><a href="/product/{{product.id}}">Détails..</a></td>
                </tr>
            {% endfor %}
        </table>
        <p>Total : {{total}}€</p>
</div>


{% endblock %}
