{% extends 'base.html.twig' %}

{% block title %}Product !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
        <h3 class="mb-5" data-id="{{ product.id }}">{{product.name}}</h3>
        <p>{{product.description}}</p>
        <p class="mb-5">Créée le {{product.createdAt|date('d/m/Y')}}</p>
        <a href="/product">Retour à la page d'accueil..</a><br>
        <button class="btn btn-primary" id="add">Ajouter au panier</button>
</div>


{% endblock %}
